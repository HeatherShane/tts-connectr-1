<div id="user-widget">
	<% if current_user %>
		Welcome <strong><%= current_user.name %></strong>!<br>
		<%= image_tag(current_user.normalimage) %>
		<%= link_to "Sign Out", signout_path, id: "sign_out" %>
	<% else %>
		<%= link_to "Sign in to Facebook", "auth/facebook", id: "sign_in" %>
	<% end %>
</div>